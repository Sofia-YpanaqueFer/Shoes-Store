<%= form_with(model: shoe, local: true) do |form| %>
  <% if shoe.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(shoe.errors.count, "error") %> prohibited this shoe from being saved:</h2>

      <ul>
      <% shoe.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div> <br>

  <div class="field">
    <%= form.label :brand_id %>
    <%= form.collection_select :brand_id, Brand.all, :id, :name, {prompt: "Seleccione una marca"} %>
  </div> <br>

  <div class="field">
    <%= form.label :category_id %>
    <%= form.collection_select :category_id, Category.all, :id, :name, {prompt: "Seleccione una categoria"} %>
  </div> <br>

  <div class="field">
    <%= form.label :year %>
    <%= form.number_field :year, min:1990, max:2023%>
  </div> <br>

  <div class="field">
    <%= form.label :rating %>
    <%= form.number_field :rating, min:0.0, max:10.0,  step:0.5%>
  </div> <br>

  <div class="field">
    <%= form.label :picture %>
    <%= form.file_field :picture %>
  </div> <br>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
